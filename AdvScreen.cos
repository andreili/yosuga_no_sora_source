		If (fWait != 0)
			WaitUntilSpriteActive(this.sprCg, true)
		EndIf
		this.cg.pt := IPoint(x, y)
	Else
		this.fUpdate := true
		this.fScroll := true
		this.scrlParam.set(IPoint(-x, -y), time, accel)
