Function MakeRandom(Integer nLimit)
	If (nLimit == 0)
		Return 0
	EndIf
	nRandomSeed := nRandomSeed * 9 + 1779772371
	Return (0 := (nRandomSeed & 2147483647)).ShiftRight(8) % nLimit
EndFunc

