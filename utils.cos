Function HitWait(Integer time)
	FlushJoyButton()
	Integer startTime := GetCurrentTime()
	While ((GetCurrentTime() - startTime) < time)
		If ((input.GetJoyButtonPushed(4) > 0) | (input.GetJoyButtonPushed(5) > 0))
			Return true
		EndIf
	EndWhile
	Return false
EndFunc

