Function ScPlaySe(String file, Integer fWait)
	If (IsLoad() == true)
		Return
	EndIf
	If ((fWait == false) &(adv.isSkip() == true))
		fWait := false
	EndIf
	PlaySe(file, fWait)
EndFunc

